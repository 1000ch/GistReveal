{
  "name": "GistReveal",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": "/src/icon/icon.png"
  },
  "content_scripts": [{
    "matches": ["*://gist.github.com/*"],
    "css": [
      "/src/css/content.css"
    ],
    "js": [
      "/reveal.js/js/reveal.min.js",
      "/src/js/content.js"
    ]
  }],
  "web_accessible_resources": [
    "/reveal.js/css/reveal.min.css"
  ],
  "background": {
    "page": "/src/html/background.html"
  },
  "description": "Reveal.js wrapper as chrome extension.",
  "manifest_version": 2
}
